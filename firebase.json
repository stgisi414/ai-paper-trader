{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/geminiProxy",
        "function": "geminiProxy"
      },
      {
        "source": "/fmpProxy",
        "function": "fmpProxy"
      },
      {
        "source": "/alpacaProxy",
        "function": "alpacaProxy"
      },
      {
        "source": "/optionsProxy",
        "function": "optionsProxy"
      },
      {
        "source": "/userSearch",
        "function": "userSearch"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5000
    }
  },
  "extensions": {
    "firestore-stripe-payments": "invertase/firestore-stripe-payments@0.3.12"
  }
}
